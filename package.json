{
  "name": "chat-turbo",
  "private": true,
  "scripts": {
    "build": "chmod +x build.sh && ./build.sh",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "start": "node apps/api/dist/server.js"
  },
  "devDependencies": {
    "globals": "^16.5.0",
    "prettier": "^3.6.2",
    "turbo": "^2.6.1",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.1.0",
  "pnpm": {
    "overrides": {
      "@types/react": "^18.3.12",
      "@types/react-dom": "^18.3.1"
    }
  },
  "engines": {
    "node": ">=20.x"
  }
}
